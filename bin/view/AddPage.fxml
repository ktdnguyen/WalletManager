<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddController">
   <children>
      <VBox layoutY="21.0" prefHeight="234.0" prefWidth="300.0">
         <children>
            <Label prefHeight="17.0" prefWidth="42.0" text="Date" />
            <DatePicker fx:id="date" promptText="Select date">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets></DatePicker>
            <Label text="Select category">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Label>
            <ChoiceBox fx:id="categoryBox" prefWidth="150.0">
               <VBox.margin>
                  <Insets bottom="40.0" />
               </VBox.margin>
            </ChoiceBox>
            <Label prefHeight="17.0" prefWidth="42.0" text="price" />
            <TextField fx:id="price">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="25.0" />
               </VBox.margin>
            </TextField>
            <Label prefHeight="17.0" prefWidth="42.0" text="Note" />
            <TextField fx:id="note">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="25.0" />
               </VBox.margin>
            </TextField>
         </children>
      </VBox>
      <Button fx:id="addbtn" layoutX="130.0" layoutY="318.0" mnemonicParsing="false" onAction="#Submit" text="Add" />
      <Label fx:id="msg" layoutX="20.0" layoutY="363.0" prefHeight="17.0" prefWidth="261.0" />
      <Label layoutX="95.0" layoutY="6.0" text="Add new transaction" />
   </children>
</AnchorPane>
